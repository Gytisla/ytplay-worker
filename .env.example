# Nuxt Environment Configuration
NODE_ENV=development
PORT=3000

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_API_QUOTA_LIMIT=10000 # Daily quota limit

# API Security
API_KEY_SALT=random-salt-string
API_KEYS=key1,key2,key3 # Comma-separated list of allowed API keys

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_BATCH_SIZE=10
QUEUE_POLLING_INTERVAL=5000 # In milliseconds

# RSS Feed Configuration
RSS_POLLING_INTERVAL=600000 # 10 minutes in milliseconds
RSS_BATCH_SIZE=50

# Observability
LOG_LEVEL=info
METRICS_ENABLED=true

# CI/CD Environment
CI=false # Set to true in GitHub Actions
COVERAGE_THRESHOLD=90
TYPECHECK_STRICT=true